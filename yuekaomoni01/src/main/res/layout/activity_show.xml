<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/show_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_left_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_edit"
        app:layout_constraintBottom_toBottomOf="@id/show_edit"
        />
    <EditText
        android:id="@+id/show_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/show_left"
        app:layout_constraintRight_toLeftOf="@id/show_seach"
        android:background="@drawable/edit_shape"
        />
    <ImageView
        android:id="@+id/show_seach"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_edit"
        app:layout_constraintBottom_toBottomOf="@id/show_edit"
        android:src="@drawable/search"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/x_recycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/show_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>